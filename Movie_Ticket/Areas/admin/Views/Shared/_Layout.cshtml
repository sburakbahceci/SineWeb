@using System.Web.Optimization

@using Movie_Ticket.App_Start
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="~/Content/img/iconfinder_Multimedia_Film_movie_cinema_multimedia_player_3841825.ico"/>
    <title>Yönetici Paneli </title>
    @Styles.Render("~/admin/styles")
</head>
<body class="nav-md">
    <div class="container body">
        <div class="main_container">
            <div class="col-md-3 left_col">
                <div class="left_col scroll-view">
                    <div class="navbar nav_title" style="border: 0;">
                        <a href="#" class="site_title"><span> YÖNETİCİ</span></a>
                        
                    </div>
                    <div class="clearfix"></div>
                    <!-- menu profile quick info -->
                    <div class="profile clearfix">

                     
                    </div>
                    <!-- /menu profile quick info -->
                    <br />
                    <!-- sidebar menu -->
                    <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
                        <div class="menu_section">
                            <h3>MENÜ</h3>
                            <ul class="nav side-menu">
                               
                                <li>
                                    <a href="@Url.RouteUrl("Halls")"><i class="fa fa-sitemap"></i> SALONLARI YÖNET</a>

                                </li>
                                <li>
                                    <a href="@Url.RouteUrl("Movies")"><i class="fa fa-film"></i> FİLMLERİ YÖNET</a>

                                </li>

                            </ul>
                        </div>
                        <div class="menu_section">
                            <h3>YÖNETİCİ</h3>
                            <ul class="nav side-menu">
                                <li>
                                    <a href="@Url.RouteUrl("Users")"><i class="fa fa-users"></i> KULLANICILAR </a>

                                </li>
                            </ul>

                        </div>
                        <img src="~/Content/img/Ataturk-logo-BF487F94B0-seeklogo.com.png" ; width="205px" ; height="185px" />
                    </div>
                    <!-- /sidebar menu -->
                    <!-- /menu footer buttons -->
                    
                    <!-- /menu footer buttons -->
                </div>
            </div>
            <!-- top navigation -->
            <div class="top_nav">
                <div class="nav_menu">
                    <nav>
                        <div class="nav toggle">
                            <a id="menu_toggle"><i class="fa fa-bars"></i></a>
                        </div>
                        
                    </nav>
                </div>
            </div>
            <!-- /top navigation -->
            <!-- page content -->

            <div class="right_col" role="main">
                @RenderBody()
                <div class="clearfix"></div>
            </div>
            <div class="clearfix"></div>
            <!-- /page content -->
            <!-- footer content -->
            <footer>
                <div class="pull-right">
                    <img src="~/Content/img/Ataturk-logo-BF487F94B0-seeklogo.com.png" height="18px" width="18px" />
                    &nbsp;<a> Atatürk Sinemaları </a>
                </div>
                <div class="clearfix"></div>
            </footer>
            <!-- /footer content -->
        </div>
    </div>
    @Scripts.Render("~/admin/scripts")

    @RenderSection("scripts", required: false)
</body>
</html>



